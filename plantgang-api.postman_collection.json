    {
      "name": "Auth",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile_number\": \"9876543210\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/plantgangs/user/send-otp",
              "host": ["{{baseUrl}}"],
              "path": ["plantgangs", "user", "send-otp"]
            },
            "description": "Sends a one-time password to the given 10-digit mobile number."
          },
          "response": [
            {
              "name": "200 â€“ OTP Sent",
              "originalRequest": {
                "method": "POST",
                "header": [{ "key": "Content-Type", "value": "application/json" }],
                "body": { "mode": "raw", "raw": "{\n  \"mobile_number\": \"9876543210\"\n}" },
                "url": { "raw": "{{baseUrl}}/plantgangs/user/send-otp", "host": ["{{baseUrl}}"], "path": ["plantgangs", "user", "send-otp"] }
              },
              "status": "OK",
              "code": 200,
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": "{\n  \"statuscode\": 200,\n  \"successstatus\": true,\n  \"message\": \"OTP sent successfully.\"\n}"
            },
            {
              "name": "400 â€“ Invalid mobile number",
              "originalRequest": {
                "method": "POST",
                "header": [{ "key": "Content-Type", "value": "application/json" }],
                "body": { "mode": "raw", "raw": "{\n  \"mobile_number\": \"123\"\n}" },
                "url": { "raw": "{{baseUrl}}/plantgangs/user/send-otp", "host": ["{{baseUrl}}"], "path": ["plantgangs", "user", "send-otp"] }
              },
              "status": "Bad Request",
              "code": 400,
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": "{\n  \"statuscode\": 400,\n  \"successstatus\": false,\n  \"message\": \"Mobile number must be exactly 10 digits!\"\n}"
            }
          ]
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile_number\": \"9876543210\",\n  \"otp\": \"1234\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/plantgangs/user/verify-otp",
              "host": ["{{baseUrl}}"],
              "path": ["plantgangs", "user", "verify-otp"]
            },
            "description": "Verifies the OTP for the given mobile number. On success a JWT cookie named `token` is set (httpOnly, 10 min TTL)."
          },
          "response": [
            {
              "name": "200 â€“ Verified",
              "originalRequest": {
                "method": "POST",
                "header": [{ "key": "Content-Type", "value": "application/json" }],
                "body": { "mode": "raw", "raw": "{\n  \"mobile_number\": \"9876543210\",\n  \"otp\": \"1234\"\n}" },
                "url": { "raw": "{{baseUrl}}/plantgangs/user/verify-otp", "host": ["{{baseUrl}}"], "path": ["plantgangs", "user", "verify-otp"] }
              },
              "status": "OK",
              "code": 200,
              "header": [
                { "key": "Content-Type", "value": "application/json" },
                { "key": "Set-Cookie", "value": "token=eyJhbGciOi...; Path=/; HttpOnly; SameSite=Lax; Max-Age=600" }
              ],
              "body": "{\n  \"statuscode\": 200,\n  \"successstatus\": true,\n  \"message\": \"OTP verified successfully.\"\n}"
            },
            {
              "name": "400 â€“ Invalid OTP format",
              "originalRequest": {
                "method": "POST",
                "header": [{ "key": "Content-Type", "value": "application/json" }],
                "body": { "mode": "raw", "raw": "{\n  \"mobile_number\": \"9876543210\",\n  \"otp\": \"12\"\n}" },
                "url": { "raw": "{{baseUrl}}/plantgangs/user/verify-otp", "host": ["{{baseUrl}}"], "path": ["plantgangs", "user", "verify-otp"] }
              },
              "status": "Bad Request",
              "code": 400,
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": "{\n  \"statuscode\": 400,\n  \"successstatus\": false,\n  \"message\": \"otp must be exactly 4 digits!\"\n}"
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/plantgangs/user/logout",
              "host": ["{{baseUrl}}"],
              "path": ["plantgangs", "user", "logout"]
            },
            "description": "Logs the user out by clearing the JWT cookie. Requires a valid `token` cookie (set by verify-otp)."
          },
          "response": [
            {
              "name": "200 â€“ Logged out",
              "originalRequest": {
                "method": "POST",
                "url": { "raw": "{{baseUrl}}/plantgangs/user/logout", "host": ["{{baseUrl}}"], "path": ["plantgangs", "user", "logout"] }
              },
              "status": "OK",
              "code": 200,
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": "{\n  \"poweredby\": \"plantsgang.serverpe.in\",\n  \"successstatus\": true,\n  \"statuscode\": 200,\n  \"message\": \"Logged out successfully\"\n}"
            },
            {
              "name": "401 â€“ Unauthorized",
              "originalRequest": {
                "method": "POST",
                "url": { "raw": "{{baseUrl}}/plantgangs/user/logout", "host": ["{{baseUrl}}"], "path": ["plantgangs", "user", "logout"] }
              },
              "status": "Unauthorized",
              "code": 401,
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": "{\n  \"poweredby\": \"serverpe.in\",\n  \"mock_data\": true,\n  \"status\": \"Failed\",\n  \"successstatus\": false,\n  \"message\": \"Token not found!\"\n}"
            }
          ]
        }
      ]
